<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobuyle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dialog_bottom_margin"
    android:paddingLeft="@dimen/dialog_left_margin"
    android:paddingRight="@dimen/dialog_right_margin"
    android:paddingTop="@dimen/dialog_top_margin" >
    
    <com.hps.mobuyle.core.widget.EnhancedEditTextWidget
        android:id="@+id/authCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxLength="6"
        mobuyle:alphaNumInput="true"
        mobuyle:labelText="@string/authCode" />

    <com.hps.mobuyle.core.widget.EnhancedEditTextWidget
        android:id="@+id/invoiceNumberWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxLength="15"
        mobuyle:labelText="@string/invoiceNumber" />
    
</LinearLayout>

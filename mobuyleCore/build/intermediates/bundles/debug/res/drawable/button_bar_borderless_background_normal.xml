<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/button_bar_border_color" />
        </shape>
    </item>
    <item android:top="@dimen/button_bar_border_width">
        <shape android:shape="rectangle" >
            <solid android:color="@color/button_bar_background_color" />

            <padding
                android:bottom="@dimen/button_bar_drawable_padding"
                android:left="@dimen/button_bar_drawable_padding"
                android:right="@dimen/button_bar_drawable_padding"
                android:top="@dimen/button_bar_drawable_padding" />
        </shape>
    </item>

</layer-list>
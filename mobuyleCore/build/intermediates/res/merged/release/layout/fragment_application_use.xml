<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_login_user"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:contentDescription="@string/app_name"
        android:paddingTop="@dimen/dialog_top_margin"
        android:paddingBottom="@dimen/dialog_bottom_margin"
        android:paddingLeft="@dimen/dialog_left_margin"
        android:paddingRight="@dimen/dialog_right_margin"
        android:src="@drawable/mobuyle_logo_dialog" />

    <TextView
        android:id="@+id/editText1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dialog_left_margin"
        android:paddingRight="@dimen/dialog_right_margin"
        android:text="@string/ApplicationUseDialogTitle"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:paddingLeft="@dimen/dialog_left_margin"
        android:paddingRight="@dimen/dialog_right_margin" >

        <WebView
            android:id="@+id/releaseNotesTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonContainer"
        style="@style/ButtonContainer"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/dialog_top_margin" >

        <Button
            android:id="@+id/okButton"
            style="@style/ButtonInContainer"
            android:gravity="center|center_vertical"
            android:text="@string/ok" />
    </LinearLayout>

</LinearLayout>
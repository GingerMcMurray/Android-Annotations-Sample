<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TableLayout
        android:id="@+id/tipTableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1" >

        <TableRow android:id="@+id/transDateRow" >

            <TextView
                style="@style/tipAdjustLabelStyle"
                android:layout_span="2"
                android:gravity="right"
                android:paddingRight="10dip"
                android:text="@string/dateTime" />

            <TextView
                android:id="@+id/time"
                style="@style/tipAdjustLabelStyle"
                android:gravity="right"
                android:paddingRight="10dip" />
        </TableRow>

        <TableRow android:id="@+id/cardNumRow" >

            <TextView
                style="@style/tipAdjustLabelStyle"
                android:layout_span="2"
                android:gravity="right"
                android:paddingRight="10dip"
                android:text="@string/cardNum" />

            <TextView
                android:id="@+id/cardNumber"
                style="@style/tipAdjustLabelStyle"
                android:gravity="right"
                android:paddingRight="10dip" />
        </TableRow>

        <TableRow android:id="@+id/userNameRow" >

            <TextView
                style="@style/tipAdjustLabelStyle"
                android:layout_span="2"
                android:gravity="right"
                android:paddingRight="10dip"
                android:text="@string/login" />

            <TextView
                android:id="@+id/userName"
                style="@style/tipAdjustLabelStyle"
                android:gravity="right"
                android:paddingRight="10dip" />
        </TableRow>

        <TableRow android:id="@+id/saleAmountRow" >

            <TextView
                android:id="@+id/saleAmountLabel"
                style="@style/tipAdjustLabelStyle"
                android:layout_span="2"
                android:gravity="right"
                android:paddingRight="10dip"
                android:text="@string/saleAmount" />

            <TextView
                android:id="@+id/saleAmount"
                style="@style/tipAdjustLabelStyle"
                android:gravity="right"
                android:paddingRight="10dip" />
        </TableRow>

        <TableRow android:id="@+id/taxAmountRow" >

            <TextView
                android:id="@+id/taxAmountLabel"
                style="@style/tipAdjustLabelStyle"
                android:layout_span="2"
                android:gravity="right"
                android:paddingRight="10dip"
                android:text="@string/tax_amount" />

            <TextView
                android:id="@+id/taxAmount"
                style="@style/tipAdjustLabelStyle"
                android:gravity="right"
                android:paddingRight="10dip" />
        </TableRow>

        <TableRow android:id="@+id/newTipAmountRow" >

            <TextView
                style="@style/tipAdjustLabelStyle"
                android:layout_span="2"
                android:gravity="right"
                android:paddingRight="10dip"
                android:text="@string/tipAmount" />

            <com.hps.mobuyle.core.widget.PecuniaryEditText
                android:id="@+id/tipAmount"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:imeOptions="actionDone"
                android:textSize="@dimen/tipLabelTextSize" />
        </TableRow>

        <TableRow android:id="@+id/totalAmountRow" >

            <TextView
                android:id="@+id/totalAmountLabel"
                style="@style/tipAdjustLabelStyle"
                android:layout_span="2"
                android:gravity="right"
                android:paddingRight="10dip"
                android:text="@string/totalAmount" />

            <TextView
                android:id="@+id/totalAmount"
                style="@style/tipAdjustLabelStyle"
                android:gravity="right"
                android:paddingRight="10dip" />
        </TableRow>

        <TableRow android:id="@+id/availBalAmountRow" >

            <TextView
                android:id="@+id/availBalAmountLabel"
                style="@style/tipAdjustLabelStyle"
                android:layout_span="2"
                android:gravity="right"
                android:paddingRight="10dip"
                android:text="@string/availableBalance" />

            <TextView
                android:id="@+id/availBalAmount"
                style="@style/tipAdjustLabelStyle"
                android:gravity="right"
                android:paddingRight="10dip" />
        </TableRow>

        <TableRow>

            <com.hps.mobuyle.core.widget.ScrollingMarquee_
                android:id="@+id/marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="3" />
        </TableRow>
    </TableLayout>

</ScrollView>
<?xml version="1.0" encoding="UTF-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetBottom="@dimen/button_default_vertical_margin"
    android:insetLeft="@dimen/button_default_horizontal_margin"
    android:insetRight="@dimen/button_default_horizontal_margin"
    android:insetTop="@dimen/button_default_vertical_margin" >

    <shape>
        <solid android:color="@color/white" />

        <stroke
            android:width="@dimen/button_stroke_width"
            android:color="@color/light_gray" />

        <padding
            android:bottom="@dimen/button_drawable_padding"
            android:left="@dimen/button_drawable_padding"
            android:right="@dimen/button_drawable_padding"
            android:top="@dimen/button_drawable_padding" />

        <corners android:radius="@dimen/button_radius" />
    </shape>

</inset>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_login_user"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:contentDescription="@string/app_name"
        android:paddingLeft="@dimen/dialog_left_margin"
        android:paddingRight="@dimen/dialog_right_margin"
        android:paddingTop="@dimen/dialog_top_margin"
        android:src="@drawable/mobuyle_logo_dialog" />

    <TextView
        android:id="@+id/editText1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dialog_left_margin"
        android:paddingRight="@dimen/dialog_right_margin"
        android:text="@string/LegalNoticeDialogTitle"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <WebView
        android:id="@+id/legaltextView"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:paddingBottom="@dimen/dialog_bottom_margin"
        android:paddingLeft="@dimen/dialog_left_margin"
        android:paddingRight="@dimen/dialog_right_margin" />

    <LinearLayout
        android:id="@+id/buttonContainer"
        style="@style/ButtonContainer"
        android:layout_gravity="bottom"
        android:orientation="horizontal" >

        <CheckBox
            style="@style/CheckboxInContainer"
            android:id="@+id/agreementCheckBox"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/acceptLegalTermsPrompt"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/continueButton"
            style="@style/ButtonInContainer"
            android:text="@string/continueLabel" />
    </LinearLayout>

</LinearLayout>